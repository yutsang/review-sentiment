{
  "output": {
    "formats": ["xlsx"],
    "encoding": "utf-8",
    "timestamp_format": "%Y%m%d_%H%M%S",
    "directory": "output",
    "combined_filename_template": "{app_key}_reviews_{timestamp}",
    "use_timestamp_subfolder": true
  },
  "colors": {
    "chart_palette": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd", "#8c564b", "#e377c2", "#7f7f7f", "#bcbd22", "#17becf"],
    "sentiment_colors": {
      "positive": "#2ca02c",
      "negative": "#d62728", 
      "neutral": "#1f77b4"
    },
    "rating_colors": {
      "5": "#2ca02c",
      "4": "#8cc665",
      "3": "#ffc107",
      "2": "#fd7e14",
      "1": "#d62728"
    }
  },
  "rate_limiting": {
    "app_store": {
      "between_requests": 1.0,
      "between_sort_methods": 2.0,
      "between_countries": 3.0
    },
    "play_store": {
      "between_requests": 2.0,
      "between_sort_methods": 5.0,
      "between_countries": 3.0
    }
  },
  "logging": {
    "level": "INFO",
    "file": "logs/app_scraper.log",
    "console": true,
    "max_file_size": "10MB",
    "backup_count": 5
  },
  "excel": {
    "auto_adjust_columns": true,
    "max_column_width": 50,
    "sheet_name": "Reviews"
  },
  "duplicate_detection": {
    "enabled": true,
    "fields": ["review_id", "content", "author", "date"]
  },
  "app_store": {
    "base_url": "https://itunes.apple.com",
    "user_agent": "Mozilla/5.0 (iPhone; CPU iPhone OS 15_0 like Mac OS X) AppleWebKit/605.1.15"
  },
  "play_store": {
    "batch_size": 1000,
    "languages": ["en"],
    "default_country": "hk"
  },
  "translation": {
    "service": "deepseek",
    "target_language": "en",
    "max_retries": 3,
    "delay": 1,
    "chunk_size": 4000
  },
  "analysis": {
    "enable_sentiment": true,
    "enable_categorization": true,
    "enable_summary": true,
    "enable_wordcloud": true,
    "enable_charts": true
  },
  "deepseek": {
    "enabled": true,
    "api_key": "sk-013e00392a7d433b8d1d09d88bc0b62e",
    "base_url": "https://api.deepseek.com/v1",
    "model": "deepseek-chat",
    "max_tokens": 1000,
    "temperature": 0.3,
    "wordcloud_prompt": "Extract the most important 2-4 word phrases from these banking app reviews. Focus on banking terms, user experience issues, features, and sentiment. Each phrase must be exactly 2-4 words and be human-readable. Examples: 'app crashes', 'customer service', 'account opening', 'transfer money', 'login problems', 'Face ID', 'verification process', 'poor service', 'good experience'. Remove repetitive phrases like 'a lot', 'lot of', 'a lot of'. Return only the phrases separated by spaces, no explanations or punctuation. Reviews: {reviews}",
    "sentiment_prompt": "Analyze the sentiment of the following banking app review. Return only a JSON object with 'sentiment' (positive/negative/neutral), 'score' (0.0 to 1.0), and 'confidence' (0.0 to 1.0). Review: {review}",
    "enable_wordcloud_only_for": ["welab_bank", "mox_bank"],
    "enable_sentiment_for_all": true
  }
} 